<div class="container pt-4">
  <div class="row pb-4">
    <div class=col-5>
      <%= image_tag @destination.get_image(400,400) %>
    </div>
    <div class="col-7">
      <h4 class="pb-3"><%= @destination.spot_name %></h4>
      <h6>Introduction（説明）：</br><%= @destination.spot_introduction %></h6>
      <h6 class="pt-3">Prefecture（県）：<%= @destination.prefecture %></h6>
      <h6 class="pt-3">City（市町村）：<%= @destination.city %></h6>
    </div>
  </div>
    <div id='map'></div>
    <style>
    #map {
      height: 400px;
      width: 100%;
    }
    </style>
    <!-- js部分 -->
    <script>
    //初期マップの設定
    let map
    let marker
    function initMap(){
      geocoder = new google.maps.Geocoder()
      map = new google.maps.Map(document.getElementById('map'), {
        center:  {lat: <%= @destination.lat %>, lng: <%= @destination.lng %>},
        zoom: 15,
      });
       marker = new google.maps.Marker({
        position:  {lat: <%= @destination.lat %>, lng: <%= @destination.lng %>},
        map: map
      });
    }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB2XHE1nVcWvx6DIbgHAofteq1gLZwiI8Q&callback=initMap" async defer></script>


  <h6 class="pt-3">交通機関：<%= @destination.transportation %></h6>
  <h6 class="pt-3">ルート：<%= @destination.route %></h6>
  <h6 class="pt-3">ホテル：<%= @destination.hotel %></h6>
  <h6 class="pt-3">交通機関で利用可能な決済手段：<%= @destination.transportation_pays %></h6>
  <h6 class="pt-3">現地で利用可能な決済手段：<%= @destination.destination_pays %></h6>
  <h6 class="pt-3">宿泊先で利用可能な決済手段：<%= @destination.hotel_pays %></h6>
  <h6 class="pt-3">外貨両替：<%= @destination.exchange %></h6>
  <h6 class="pt-3">その他の情報：<%= @destination.other_info %></h6>

  <div class="row pt-4">
    <div class="col-2">
      <%= link_to user_path(@destination.user.id) do %>
      <p><%= image_tag @destination.user.get_profile_image(100,100), class:"rounded-circle"; %></p>
      <% end %>
    </div>
    <div class="col-3">
      <p>ユーザーネーム：<%= link_to user_path(@destination.user.id) do %><%= @destination.user.name %></p>
      <% end %>
      <p class="pt-4">投稿日：<%= @destination.created_at.strftime('%Y/%m/%d') %></p>
    </div>
    <div class="col-2">
      <% if @destination.user == current_user %>
        <%= link_to "編集", edit_destination_path(@destination), method: :get, class: 'btn btn-success' %>
      <% end %>

      <% if @destination.user == current_user %>
        <%= link_to "削除", destination_path(@destination), method: :delete, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
  <div>
    <% if @destination.favorited_by?(current_user) %>
      <p>
        <%= link_to destination_favorites_path(@destination), method: :delete do %>
          ♥<%= @destination.favorites.count %> いいね
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to destination_favorites_path(@destination), method: :post do %>
          ♡<%= @destination.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>
  </div>

    <div>
      <p>コメント件数：<%= @destination.post_comments.count %></p>
      <% @destination.post_comments.each do |post_comment| %>
        <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
        <%= post_comment.user.name %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>

        <% if post_comment.user == current_user %>
         <%= link_to "削除", destination_post_comment_path(post_comment.destination, post_comment), method: :delete %>
        <% end %>

      <% end %>
    </div>
    <div>
      <%= form_with model: [@destination, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>

    <% if current_user.admin? && !(current_user == @destination.user) %>
      <%= link_to "delete", @destination, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>



</div>