<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>Introduction</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}, btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>