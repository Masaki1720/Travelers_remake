<div class="container">
  <h2 class="p-4">プロフィール編集</h2>
  <div class="row">
    <%= form_with model: @user, method: :patch do |f| %>

    <div class="col-4">
      <label for="inputName">Name</label>
    </div>
    <div class="col-4">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>

    <div class="col-4">
      <label for="inputEmail">Email</label>
    </div>
    <div class="col-4">
      <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メール"%>
    </div>

    <div class="col-4">
      <label for="inputImage">ProfileImage</label>
    </div>
    <div class="col-4">
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div class="col-4">
      <label for="inputNationality">Nationality</label>
    </div>
    <div class="col-4">
      <%= f.text_field :nationality, autofocus: true, id:"inputNationality", placeholder:"国籍"%>
    </div>

    <div class="col-4">
      <label for="inputIntroduction">Introduction</label>
    </div>
    <div class="col-4">
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
    </div>
    <div class="col-4 pt-4">
    <%= f.submit "Update" %>
    <% end %>
    </div>
  </div>
</div>

