<!DOCTYPE html>
<html>
  <head>
    <title>Travelers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark text-white-50 bg-dark">
      <div class="navbar-brand pr-5" href="#">Travelers</div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
        </button>
        <% if user_signed_in? %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <%= link_to root_path, class: 'btn btn-outline-secondary text-white' do %>
              <li class="nav-item active">
                <strong>Home</strong>
              </li>
              <% end %>
            </ul>
          </div>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <%= link_to new_destination_path, class: 'btn btn-outline-secondary text-white' do %>
              <li class="nav-item active">
                <strong>New Post</strong>
              </li>
              <% end %>
            </ul>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary text-white' do %>
              <li class="nav-item active">
                <strong>Your Account</strong>
              </li>
              <% end %>
            </ul>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <%= link_to destinations_path, class: 'btn btn-outline-secondary text-white' do %>
              <li class="nav-item active">
                <strong>All Posts</strong>
              </li>
              <% end %>
            </ul>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-outline-secondary text-white' do %>
              <li class="nav-item active">
                <strong>Log out</strong>
              </li>
              <% end %>
          </div>

      <% else %>
         <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="#"><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %></a>
              </li>
            </ul>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="#"><%= link_to "新規登録", new_user_registration_path %><a>
              </li>
            </ul>
          </div>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="#"><%= link_to "ログイン", new_user_session_path %><a>
              </li>
            </ul>
          </div>
      <% end %>
      <%= render 'searches/form' %>
    </nav>
  </header>
  <div class="col-12" style="background-color:khaki;">
   <%= yield %>
  </div>
</body>
</html>
